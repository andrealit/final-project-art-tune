<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_track_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_track_title"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_track_image" />

    <TextView
        android:id="@+id/tv_track_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/artist"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_track_title"
        app:layout_constraintLeft_toRightOf="@id/iv_track_image" />

    <TextView
        android:id="@+id/tv_track_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="@string/length"
        app:layout_constraintLeft_toRightOf="@id/tv_track_artist"
        app:layout_constraintTop_toBottomOf="@+id/tv_track_title" />

    <TextView
        android:id="@+id/link"
        android:autoLink="web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/url"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_track_artist"
        app:layout_constraintLeft_toRightOf="@id/iv_track_image" />



</androidx.constraintlayout.widget.ConstraintLayout>